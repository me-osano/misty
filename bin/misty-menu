#!/bin/bash

# Launch the Misty Menu or takes a parameter to jump straight to a submenu.

export PATH="$HOME/.local/share/misty/bin:$PATH"

# Set to true when going directly to a submenu, so we can exit directly
BACK_TO_EXIT=false

back_to() {
  local parent_menu="$1"

  if [[ "$BACK_TO_EXIT" == "true" ]]; then
    exit 0
  elif [[ -n "$parent_menu" ]]; then
    "$parent_menu"
  else
    show_main_menu
  fi
}

menu() {
  local prompt="$1"
  local options="$2"
  local extra="$3"
  local preselect="$4"

  read -r -a args <<<"$extra"

  if [[ -n "$preselect" ]]; then
    local index
    index=$(echo -e "$options" | grep -nxF "$preselect" | cut -d: -f1)
    if [[ -n "$index" ]]; then
      args+=("-c" "$index")
    fi
  fi

  echo -e "$options" | misty-launch-walker --dmenu --width 295 --minheight 1 --maxheight 630 -p "$prompt…" "${args[@]}" 2>/dev/null
}

terminal() {
  $TERMINAL --class=org.misty.terminal -e bash -c "$*"
}

present_terminal() {
  misty-launch-terminal $1
}

open_in_editor() {
  notify-send "Editing config file" "$1"
  misty-launch-editor "$1"
}

install() {
  present_terminal "echo 'Installing $1...'; sudo pacman -S --noconfirm $2"
}

install_and_launch() {
  present_terminal "echo 'Installing $1...'; sudo pacman -S --noconfirm $2 && setsid gtk-launch $3"
}

install_font() {
  present_terminal "echo 'Installing $1...'; sudo pacman -S --noconfirm --needed $2 && sleep 2 && misty-font-set '$3'"
}

aur_install() {
  present_terminal "echo 'Installing $1 from AUR...'; yay -S --noconfirm $2"
}

aur_install_and_launch() {
  present_terminal "echo 'Installing $1 from AUR...'; yay -S --noconfirm $2 && setsid gtk-launch $3"
}

show_learn_menu() {
  case $(menu "Learn" "  Hyprland\n󰣇  Arch\n  Neovim\n󱆃  Bash") in
  *Hyprland*) misty-launch-webapp "https://wiki.hypr.land/" ;;
  *Arch*) misty-launch-webapp "https://wiki.archlinux.org/title/Main_page" ;;
  *Bash*) misty-launch-webapp "https://devhints.io/bash" ;;
  *Neovim*) misty-launch-webapp "https://www.lazyvim.org/keymaps" ;;
  *) show_main_menu ;;
  esac
}

show_trigger_menu() {
  case $(menu "Trigger" "  Capture\n  Share\n󰔎  Toggle") in
  *Capture*) show_capture_menu ;;
  *Share*) show_share_menu ;;
  *Toggle*) show_toggle_menu ;;
  *) show_main_menu ;;
  esac
}

show_capture_menu() {
  case $(menu "Capture" "  Screenshot\n󰃉  Color") in
  *Screenshot*) show_screenshot_menu ;;
  *Color*) pkill hyprpicker || hyprpicker -a ;;
  *) show_trigger_menu ;;
  esac
}

show_screenshot_menu() {
  case $(menu "Screenshot" "  Snap with Editing\n  Straight to Clipboard") in
  *Editing*) misty-cmd-screenshot smart ;;
  *Clipboard*) misty-cmd-screenshot smart clipboard ;;
  *) show_capture_menu ;;
  esac
}

show_share_menu() {
  case $(menu "Share" "  Clipboard\n  File \n  Folder") in
  *Clipboard*) misty-cmd-share clipboard ;;
  *File*) terminal misty-cmd-share file ;;
  *Folder*) terminal misty-cmd-share folder ;;
  *) back_to show_trigger_menu ;;
  esac
}

show_toggle_menu() {
  case $(menu "Toggle" "󰔎  Nightlight\n󱫖  Idle Lock\n󰍜  Top Bar") in
  *Nightlight*) misty-toggle-nightlight ;;
  *Idle*) misty-toggle-idle ;;
  *Bar*) misty-toggle-waybar ;;
  *) show_trigger_menu ;;
  esac
}

show_style_menu() {
  case $(menu "Style" "󰸌  Theme\n  Font\n  Background\n  Hyprland\n󱄄  Screensaver\n  About") in
  *Theme*) show_theme_menu ;;
  *Font*) show_font_menu ;;
  *Background*) misty-theme-bg-next ;;
  *Hyprland*) open_in_editor ~/.config/hypr/hyprland/looknfeel.conf ;;
  *Screensaver*) open_in_editor ~/.config/misty/branding/screensaver.txt ;;
  *About*) open_in_editor ~/.config/misty/branding/about.txt ;;
  *) show_main_menu ;;
  esac
}

show_theme_menu() {
  theme=$(menu "Theme" "$(misty-theme-list)" "" "$(misty-theme-current)")
  if [[ "$theme" == "CNCLD" || -z "$theme" ]]; then
    back_to show_style_menu
  else
    misty-theme-set "$theme"
  fi
}

show_font_menu() {
  theme=$(menu "Font" "$(misty-font-list)" "--width 350" "$(misty-font-current)")
  if [[ "$theme" == "CNCLD" || -z "$theme" ]]; then
    back_to show_style_menu
  else
    misty-font-set "$theme"
  fi
}

show_setup_menu() {
  local options="  Wifi\n󰂯  Bluetooth"
  [ -f ~/.config/hypr/hyprland/keybindings.conf ] && options="$options\n  Keybindings"
  [ -f ~/.config/hypr/hyprland/input.conf ] && options="$options\n  Input"
  [ -f ~/.config/hypr/hyprland/windowrules.conf ] && options="$options\n󰍹  WindowRules"
  options="$options\n󰱔  DNS\n  Security\n  Config"

  case $(menu "Setup" "$options") in
  *Wifi*) misty-launch-wifi ;;
  *Bluetooth*) misty-launch-bluetooth ;;
  *Keybindings*) open_in_editor ~/.config/hypr/hyprland/keybindings.conf ;;
  *Input*) open_in_editor ~/.config/hypr/hyprland/input.conf ;;
  *WindowRules*) open_in_editor ~/.config/hypr/hyprland/windowrules.conf ;;
  *DNS*) present_terminal misty-setup-dns ;;
  *Security*) show_setup_security_menu ;;
  *Config*) show_setup_config_menu ;;
  *) show_main_menu ;;
  esac
}

show_setup_security_menu() {
  case $(menu "Setup" "  Secureboot\n  Apparmor\n") in
  *Secureboot*) present_terminal misty-setup-secureboot ;;
  *Apparmor*) present_terminal misty-setup-apparmor ;;
  *) show_setup_menu ;;
  esac
}

show_setup_config_menu() {
  case $(menu "Setup" "  Bash\n  Hyprland\n  Hypridle\n  Hyprlock\n  Hyprsunset\n  Swayosd\n󰌧  Walker\n󰍜  Waybar") in
  *Bash*) open_in_editor ~/.bashrc ;;
  *Hyprland*) open_in_editor ~/.config/hypr/hyprland.conf ;;
  *Hypridle*) open_in_editor ~/.config/hypr/hypridle.conf && misty-restart-hypridle ;;
  *Hyprlock*) open_in_editor ~/.config/hypr/hyprlock.conf ;;
  *Hyprsunset*) open_in_editor ~/.config/hypr/hyprsunset.conf && misty-restart-hyprsunset ;;
  *Swayosd*) open_in_editor ~/.config/swayosd/config.toml && misty-restart-swayosd ;;
  *Walker*) open_in_editor ~/.config/walker/config.toml && misty-restart-walker ;;
  *Waybar*) open_in_editor ~/.config/waybar/config.jsonc && misty-restart-waybar ;;
  *) show_setup_menu ;;
  esac
}

show_install_menu() {
  case $(menu "Install" "󰣇  Package\n󰣇  AUR\n  Web App\n  TUI\n  Style\n󰵮  Development\n  Editor\n  Terminal\n󱚤  AI\n  Gaming") in
  *Package*) terminal misty-pkg-install ;;
  *AUR*) terminal misty-pkg-aur-install ;;
  *Web*) present_terminal misty-webapp-install ;;
  *TUI*) present_terminal misty-tui-install ;;
  *Development*) show_install_development_menu ;;
  *Editor*) show_install_editor_menu ;;
  *AI*) show_install_ai_menu ;;
  *Gaming*) show_install_gaming_menu ;;
  *) show_main_menu ;;
  esac
}

show_install_editor_menu() {
  case $(menu "Install" "  Neovim\n  VSCode\n  Emacs\n  Cursor\n  Zed\n  Sublime Text\n  Helix") in
  *Neovim*) present_terminal misty-install-neovim ;;
  *VSCode*) present_terminal misty-install-vscode ;;
  *Emacs*) install "Emacs" "emacs-wayland" ;;
  *Cursor*) install_and_launch "Cursor" "cursor-bin" "cursor" ;;
  *Zed*) present_terminal "echo 'Installing Zed...'; sudo pacman -S zed && setsid gtk-launch dev.zed.Zed" ;;
  *Sublime*) install_and_launch "Sublime Text" "sublime-text-4" "sublime_text" ;;
  *Helix*) install "Helix" "helix" ;;
  *) show_install_menu ;;
  esac
}

show_install_ai_menu() {
  ollama_pkg=$(
    (command -v nvidia-smi &>/dev/null && echo ollama-cuda) ||
      (command -v rocminfo &>/dev/null && echo ollama-rocm) ||
      echo ollama
  )

  case $(menu "Install" "󱚤  Claude Code\n󱚤  Copilot CLI\n󱚤  Cursor CLI\n󱚤  Gemini\n󱚤  OpenAI Codex\n󱚤  LM Studio\n󱚤  Ollama\n󱚤  Crush") in
  *Claude*) install "Claude Code" "claude-code" ;;
  *Copilot*) install "Copilot CLI" "github-copilot-cli" ;;
  *Cursor*) install "Cursor CLI" "cursor-cli" ;;
  *Gemini*) install "Gemini" "gemini-cli" ;;
  *OpenAI*) install "OpenAI Codex" "openai-codex" ;;
  *Studio*) install "LM Studio" "lmstudio" ;;
  *Ollama*) install "Ollama" $ollama_pkg ;;
  *Crush*) install "Crush" "crush-bin" ;;
  *) show_install_menu ;;
  esac
}

show_install_gaming_menu() {
  case $(menu "Install" "  Steam\n  RetroArch [AUR]\n󰍳  Minecraft") in
  *Steam*) present_terminal misty-install-steam ;;
  *RetroArch*) aur_install_and_launch "RetroArch" "retroarch retroarch-assets libretro libretro-fbneo" "com.libretro.RetroArch.desktop" ;;
  *Minecraft*) install_and_launch "Minecraft" "minecraft-launcher" "minecraft-launcher" ;;
  *) show_install_menu ;;
  esac
}

show_install_development_menu() {
  case $(menu "Install" "󰫏  Ruby on Rails\n  Docker DB\n  JavaScript\n  Go\n  PHP\n  Python\n  Elixir\n  Zig\n  Rust\n  Java\n  .NET\n  OCaml\n  Clojure") in
  *Rails*) present_terminal "misty-install-dev-env ruby" ;;
  *Docker*) present_terminal misty-install-docker-dbs ;;
  *JavaScript*) show_install_javascript_menu ;;
  *Go*) present_terminal "misty-install-dev-env go" ;;
  *PHP*) show_install_php_menu ;;
  *Python*) present_terminal "misty-install-dev-env python" ;;
  *Elixir*) show_install_elixir_menu ;;
  *Zig*) present_terminal "misty-install-dev-env zig" ;;
  *Rust*) present_terminal "misty-install-dev-env rust" ;;
  *Java*) present_terminal "misty-install-dev-env java" ;;
  *NET*) present_terminal "misty-install-dev-env dotnet" ;;
  *OCaml*) present_terminal "misty-install-dev-env ocaml" ;;
  *Clojure*) present_terminal "misty-install-dev-env clojure" ;;
  *) show_install_menu ;;
  esac
}

show_install_javascript_menu() {
  case $(menu "Install" "  Node.js\n  Bun\n  Deno") in
  *Node*) present_terminal "misty-install-dev-env node" ;;
  *Bun*) present_terminal "misty-install-dev-env bun" ;;
  *Deno*) present_terminal "misty-install-dev-env deno" ;;
  *) show_install_development_menu ;;
  esac
}

show_install_php_menu() {
  case $(menu "Install" "  PHP\n  Laravel\n  Symfony") in
  *PHP*) present_terminal "misty-install-dev-env php" ;;
  *Laravel*) present_terminal "misty-install-dev-env laravel" ;;
  *Symfony*) present_terminal "misty-install-dev-env symfony" ;;
  *) show_install_development_menu ;;
  esac
}

show_install_elixir_menu() {
  case $(menu "Install" "  Elixir\n  Phoenix") in
  *Elixir*) present_terminal "misty-install-dev-env elixir" ;;
  *Phoenix*) present_terminal "misty-install-dev-env phoenix" ;;
  *) show_install_development_menu ;;
  esac
}

show_remove_menu() {
  case $(menu "Remove" "󰣇  Package\n  Web App\n  TUI\n󰵮  Development\n  Secureboot\nn  Apparmor") in
  *Package*) terminal misty-pkg-remove ;;
  *Web*) present_terminal misty-webapp-remove ;;
  *TUI*) present_terminal misty-tui-remove ;;
  *Development*) show_remove_development_menu ;;
  *Secureboot*) present_terminal "misty-setup-secureboot --remove" ;;
  *Apparmor*) present_terminal "misty-setup-apparmor --remove" ;;
  *) show_main_menu ;;
  esac
}

show_remove_development_menu() {
  case $(menu "Remove" "󰫏  Ruby on Rails\n  JavaScript\n  Go\n  PHP\n  Python\n  Elixir\n  Zig\n  Rust\n  Java\n  .NET\n  OCaml\n  Clojure") in
  *Rails*) present_terminal "misty-remove-dev-env ruby" ;;
  *JavaScript*) show_remove_javascript_menu ;;
  *Go*) present_terminal "misty-remove-dev-env go" ;;
  *PHP*) show_remove_php_menu ;;
  *Python*) present_terminal "misty-remove-dev-env python" ;;
  *Elixir*) show_remove_elixir_menu ;;
  *Zig*) present_terminal "misty-remove-dev-env zig" ;;
  *Rust*) present_terminal "misty-remove-dev-env rust" ;;
  *Java*) present_terminal "misty-remove-dev-env java" ;;
  *NET*) present_terminal "misty-remove-dev-env dotnet" ;;
  *OCaml*) present_terminal "misty-remove-dev-env ocaml" ;;
  *Clojure*) present_terminal "misty-remove-dev-env clojure" ;;
  *) show_remove_menu ;;
  esac
}

show_remove_javascript_menu() {
  case $(menu "Remove" "  Node.js\n  Bun\n  Deno") in
  *Node*) present_terminal "misty-remove-dev-env node" ;;
  *Bun*) present_terminal "misty-remove-dev-env bun" ;;
  *Deno*) present_terminal "misty-remove-dev-env deno" ;;
  *) show_remove_development_menu ;;
  esac
}

show_remove_php_menu() {
  case $(menu "Remove" "  PHP\n  Laravel\n  Symfony") in
  *PHP*) present_terminal "misty-remove-dev-env php" ;;
  *Laravel*) present_terminal "misty-remove-dev-env laravel" ;;
  *Symfony*) present_terminal "misty-remove-dev-env symfony" ;;
  *) show_remove_development_menu ;;
  esac
}

show_remove_elixir_menu() {
  case $(menu "Remove" "  Elixir\n  Phoenix") in
  *Elixir*) present_terminal "misty-remove-dev-env elixir" ;;
  *Phoenix*) present_terminal "misty-remove-dev-env phoenix" ;;
  *) show_remove_development_menu ;;
  esac
}

show_update_menu() {
  case $(menu "Update" "  Misty\n  Process\n󰇅  Hardware\n  Firmware\n  Password") in
  *Misty*) present_terminal misty-update ;;
  *Process*) show_update_process_menu ;;
  *Hardware*) show_update_hardware_menu ;;
  *Firmware*) present_terminal misty-update-firmware ;;
  *Password*) show_update_password_menu ;;
  *) show_main_menu ;;
  esac
}

show_update_process_menu() {
  case $(menu "Restart" "  Hypridle\n  Hyprsunset\n  Swayosd\n󰌧  Walker\n󰍜  Waybar") in
  *Hypridle*) misty-restart-hypridle ;;
  *Hyprsunset*) misty-restart-hyprsunset ;;
  *Swayosd*) misty-restart-swayosd ;;
  *Walker*) misty-restart-walker ;;
  *Waybar*) misty-restart-waybar ;;
  *) show_update_menu ;;
  esac
}

show_update_hardware_menu() {
  case $(menu "Restart" "  Audio\n󱚾  Wi-Fi\n󰂯  Bluetooth") in
  *Audio*) present_terminal misty-restart-audio ;;
  *Wi-Fi*) present_terminal misty-restart-wifi ;;
  *Bluetooth*) present_terminal misty-restart-bluetooth ;;
  *) show_update_menu ;;
  esac
}

show_update_password_menu() {
  case $(menu "Update Password" "  Drive Encryption\n  User") in
  *Drive*) present_terminal misty-drive-set-password ;;
  *User*) present_terminal passwd ;;
  *) show_update_menu ;;
  esac
}

show_about() {
  misty-launch-about
}

show_system_menu() {
  local options="  Lock\n󰜉  Reboot\n󰐥  Shutdown"

  case $(menu "System" "$options") in
  *Lock*) misty-lock-screen ;;
  *Reboot*) misty-cmd-reboot ;;
  *Shutdown*) misty-cmd-shutdown ;;
  *) back_to show_main_menu ;;
  esac
}

show_main_menu() {
  go_to_menu "$(menu "Go" "󰀻  Apps\n󰧑  Learn\n󱓞  Trigger\n  Style\n  Setup\n󰉉  Install\n󰭌  Remove\n  Update\n  About\n  System")"
}

go_to_menu() {
  case "${1,,}" in
  *apps*) walker -p "Launch…" ;;
  *learn*) show_learn_menu ;;
  *trigger*) show_trigger_menu ;;
  *share*) show_share_menu ;;
  *capture*) show_capture_menu ;;
  *style*) show_style_menu ;;
  *theme*) show_theme_menu ;;
  *screenshot*) show_screenshot_menu ;;
  *setup*) show_setup_menu ;;
  *install*) show_install_menu ;;
  *remove*) show_remove_menu ;;
  *update*) show_update_menu ;;
  *about*) show_about ;;
  *system*) show_system_menu ;;
  esac
}

if [[ -n "$1" ]]; then
  BACK_TO_EXIT=true
  go_to_menu "$1"
else
  show_main_menu
fi
