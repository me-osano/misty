#!/bin/bash

# Cycles through the background images available

THEME_NAME=$(cat "$HOME/.config/misty/current/theme.name" 2>/dev/null)
THEME_BACKGROUNDS_PATH="$HOME/.config/misty/current/theme/backgrounds/"
USER_BACKGROUNDS_PATH="$HOME/.config/misty/backgrounds/$THEME_NAME/"
CURRENT_BACKGROUND_LINK="$HOME/.config/misty/current/background"
DEFAULT_BACKGROUND="$HOME/.local/share/misty/themes/tokyo-night/backgrounds/0-swirl-buck.jpg"

mapfile -d '' -t BACKGROUNDS < <(find -L "$USER_BACKGROUNDS_PATH" "$THEME_BACKGROUNDS_PATH" -maxdepth 1 -type f -print0 2>/dev/null | sort -z)
TOTAL=${#BACKGROUNDS[@]}

if [[ $TOTAL -eq 0 ]]; then
  notify-send "No background was found for theme" -t 2000
else
  # Get current background from symlink
  if [[ -L "$CURRENT_BACKGROUND_LINK" ]]; then
    CURRENT_BACKGROUND=$(readlink "$CURRENT_BACKGROUND_LINK")
  else
    # Default to first background if no symlink exists
    CURRENT_BACKGROUND="$DEFAULT_BACKGROUND"
  fi

  # Find current background index
  INDEX=-1
  for i in "${!BACKGROUNDS[@]}"; do
    if [[ "${BACKGROUNDS[$i]}" == "$CURRENT_BACKGROUND" ]]; then
      INDEX=$i
      break
    fi
  done

  # Get next background (wrap around)
  if [[ $INDEX -eq -1 ]]; then
    # Use the first background when no match was found
    NEW_BACKGROUND="${BACKGROUNDS[0]}"
  else
    NEXT_INDEX=$(((INDEX + 1) % TOTAL))
    NEW_BACKGROUND="${BACKGROUNDS[$NEXT_INDEX]}"
  fi

  # Set new background symlink
  ln -nsf "$NEW_BACKGROUND" "$CURRENT_BACKGROUND_LINK"

  # Update hyprpaper: unload cached version, preload new, then apply
  hyprctl hyprpaper unload "$CURRENT_BACKGROUND_LINK" >/dev/null 2>&1
  hyprctl hyprpaper preload "$CURRENT_BACKGROUND_LINK" >/dev/null 2>&1
  hyprctl hyprpaper wallpaper ",$CURRENT_BACKGROUND_LINK" >/dev/null 2>&1
fi
